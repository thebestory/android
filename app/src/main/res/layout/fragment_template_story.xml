<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_story"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/top_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/name_topic"
                        android:layout_alignTop="@+id/name_topic"
                        android:layout_marginStart="5dp"
                        app:srcCompat="@drawable/ic_smile_black_24dp" />

                    <TextView
                        android:id="@+id/name_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/image_topic"
                        android:text="Funny"
                        android:textColor="@color/black_colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/number_story"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:text="#56"
                        android:textSize="12sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/text_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top_bar"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:alpha="0.8"
                    android:text=""
                    android:textColor="@color/black_colorText"
                    android:textSize="15sp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="#d1d0d0" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="4 hour ago"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/image_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/numbers_likes"
                    android:layout_alignTop="@+id/numbers_likes"
                    android:layout_toStartOf="@id/numbers_likes"
                    app:srcCompat="@drawable/ic_like_empty_black_24dp" />

                <TextView
                    android:id="@+id/numbers_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:text="120"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>